{
  "name": "allure-tap",
  "version": "2.0.0-beta.19",
  "description": "Allure tap reporter integration",
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": "./bin/cmd",
  "scripts": {
    "clean": "rimraf ./dist ./out",
    "lint": "eslint ./src ./index.ts --ext .ts",
