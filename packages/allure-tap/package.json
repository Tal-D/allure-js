  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/minimist": "^1.2.2",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.5",
    "@types/sinon": "^10.0.13",
    "@types/through2": "^2.0.36",
    "allure-mocha": "workspace:*",
    "chai": "^4.3.6",
    "fast-glob": "^3.2.12",
    "mocha": "^10.1.0",
    "mocha-multi-reporters": "^1.5.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
